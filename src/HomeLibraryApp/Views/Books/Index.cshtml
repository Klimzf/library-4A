@model IEnumerable<Book>
@{
    ViewData["Title"] = "Книги";
}

<div class="container mt-4">
    <h1>Моя библиотека</h1>
    <a asp-action="Create" class="btn btn-primary mb-3">+ Добавить книгу</a>
    
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Название</th>
                <th>Автор</th>
                <th>Год</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Title</td>
                    <td>@book.Author</td>
                    <td>@book.PublicationYear</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@book.Id" class="btn btn-sm btn-info">Подробнее</a>
                        <a asp-action="EditContent" asp-route-id="@book.Id" class="btn btn-sm btn-warning">Редактировать XML</a>
                        <a asp-action="Delete" asp-route-id="@book.Id" class="btn btn-sm btn-danger" 
                           onclick="return confirm('Удалить книгу?')">Удалить</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>