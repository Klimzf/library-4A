@model Book
@{
    ViewData["Title"] = "Добавить книгу";
}

<div class="container mt-4">
    <h1>Добавить новую книгу</h1>
    
    <form asp-action="Create">
        <div class="mb-3">
            <label asp-for="Title" class="form-label">Название</label>
            <input asp-for="Title" class="form-control" required />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        
        <div class="mb-3">
            <label asp-for="Author" class="form-label">Автор</label>
            <input asp-for="Author" class="form-control" required />
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>
        
        <div class="mb-3">
            <label asp-for="PublicationYear" class="form-label">Год издания</label>
            <input asp-for="PublicationYear" type="number" class="form-control" min="1800" max="2030" required />
            <span asp-validation-for="PublicationYear" class="text-danger"></span>
        </div>
        
        <div class="mb-3">
            <label asp-for="ContentXML" class="form-label">Оглавление (XML)</label>
            <textarea asp-for="ContentXML" class="form-control" rows="10"></textarea>
            <div class="mt-2 text-muted small">
                <strong>Пример структуры:</strong>
                <pre class="bg-light p-2 rounded">@Html.Raw("&lt;Chapters&gt;\n  &lt;Chapter&gt;Введение&lt;/Chapter&gt;\n  &lt;Chapter&gt;Основная часть&lt;/Chapter&gt;\n&lt;/Chapters&gt;")</pre>
            </div>
        </div>
        
        <button type="submit" class="btn btn-primary">Создать</button>
        <a asp-action="Index" class="btn btn-secondary">Отмена</a>
    </form>
</div>
